<div class="row">
  <div class="col-md-7">
    {{query-tile query=model}}

    {{answer-new query=model submitAnswer="addAnswer"}}
    <hr>
    <div class="list-group">
      {{#each model.answers as |answer|}}
        {{answer-tile answer=answer class="list-group-item"}}
      {{/each}}
    </div>
  </div>
  <div class="col-md-5">
    {{query-edit query=model editQuery="editQuery" delete="delete"}}

  </div>
</div>
