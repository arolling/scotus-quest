{{#if seeEditForm}}
  <form class="form-horizontal" id="editForm">
    <div class="form-group">
      <label for="supplicant" class="col-sm-2 control-label">Your Name:</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" value=supplicant id="supplicant" placeholder=query.supplicant}}
      </div>
    </div>

    <div class="form-group">
      <label for="plea" class="col-sm-2 control-label">Question: <small>(Please be concise)</small></label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" value=query.plea id="plea"}}
      </div>
    </div>

    <div class="form-group">
      <label for="details" class="col-sm-2 control-label">Details:</label>
      <div class="col-sm-10">
        {{textarea type="text" class="form-control" rows=6 value=query.details id="details"}}
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button  class="btn btn-default" {{action "submitEdit" query}}>Submit Edit</button>
      </div>
    </div>
  </form>
{{else}}
  <button type="button" class="btn btn-lg btn-danger togglebtn" {{action "deleteQuery" query}}>Delete Question</button>
  <button type="button" class="btn btn-lg btn-primary" {{action "editForm"}}>Edit Question</button>
{{/if}}
