<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">{{query.plea}}</h1>
  </div>
  <div class="panel-body">
    <div class="formatted">
      <p>{{bodyFormat query.details}}</p>
      <p>{{tagfilter query}}
        {{#each query.tags as |tag|}}
          {{#link-to 'tagged' tag.id}} #{{tag.words}} {{/link-to}}
        {{/each}}
      </p>
    </div>
  </div>
  <div class="panel-footer">
    <p>
      Posted {{moment-from-now query.posted}} by {{query.supplicant}}
    </p>
  </div>
</div>
